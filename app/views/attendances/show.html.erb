<header>
	<h1 id="show-title"><%= @event.title %></h1> <h3>Attendance Status</h3>

	<ul class="actions">
		<li><%= link_to "Back", user_path, class: "btn btn-default" %></li>
	</ul>
</header>

<!--This is for organized events -->

<% if @event.attendees.any? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Registered</th>
				<th>Event Status</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @event.attendees.reverse.each do |user| %>
				<tr>
					<td><%= user.full_name %></td>
					<td><%= user.email %></td>
					<td><%= user.created_at %></td> 
					<td><%= "#" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else%>
	<p>Sorry! This event has no attendees yet...</p>
<% end %>