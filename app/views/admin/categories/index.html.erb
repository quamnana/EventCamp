<header>
	<h1>List Of Categories</h1>


	<% admins_only do %>
		<ul class="actions">
			<li><%= link_to "Create Category", new_admin_category_path, class: "new" %></li>
			<li><%= link_to "Back to Dashboard", admin_root_path, class: "ibtn" %></li>
		</ul>
	<% end %>
</header>

<table class="table table-striped table-responsive">
	<thead>
		<tr>
			<th>Name</th>
			<th>Created</th>
			<th>Events</th>
			<th colspan="3"></th>
		</tr>
	</thead>


	<tbody>
		<% @categories.reverse.each do |category| %>
			<tr>
				<td><%= category.name %></td>
				<td><%= time_format(category.created_at)%></td>
				<td><%= category.events.count %></td>
				<td>
					<%= link_to "View", category_path(category)%> | <%= link_to "Edit", edit_admin_category_path(category) %> | <%= link_to "Delete", admin_category_path(category), method: :delete, data: {confirm: "Are you sure?"} %> 
				</td>
			</tr>
		<% end %>
	</tbody>
</table>